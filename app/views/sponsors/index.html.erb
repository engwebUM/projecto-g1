<div class="container">
    <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="page-header">
        <h3 class="panel-title">Sponsors</h3>
      </div>
      <div class="panel-body">
        <div class="row">
            <% if @sponsors.empty? %>
            You don't have any sponsors
            <% else %>
            <table class="table table-hover">
                  <thead>
                    <tr>
                      <td></td>
                      <th class="text-center" colspan="4">Responsible</th>
                      <td colspan="5"></td>
                    </tr>
                    <tr>
                      <th>Org.</th>
                      <th>Name</th>
                      <th>Role</th>
                      <th>Email</th>
                      <th>Phone</th>
                      <th>Extra Pay</th>
                      <th>State</th>
                      <th>Next Step</th>
                      <th>Notes</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @sponsors %>
                  </tbody>
                </table>
            <% end %>
          </div>
        </div>
        <%= link_to 'Create new Sponsor', new_sponsor_path %>
      </div>
</div>
</div>
