<div class="container">
    <div class="row">
      <h3 class="panel-title">Sponsors</h3>
    </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <% if @sponsors.empty? %>
            You don't have any sponsors
            <% else %>
            <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Organization</th>
                      <th>Responsable Name</th>
                      <th>Responsable Role</th>
                      <th>Responsable Email</th>
                      <th>Responsable Phone</th>
                      <th>Extra Pay</th>
                      <th>State</th>
                      <th>Next Step</th>
                      <th>Notes</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <%= render @sponsors %>
                  </tbody>
                </table>
            <% end %>
          </div>
        </div>
        <%= link_to 'Create new Sponsor', new_sponsor_path %>
      </div>
</div>
