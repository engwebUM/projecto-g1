<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="page-header">
        <h3>Sponsors
          <%= link_to new_sponsor_path, class: "btn btn-primary btn-xs" do %>
           <span class="glyphicon glyphicon-list-alt"></span> Create New Sponsor
          <% end %>
        </h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <% if @sponsors.empty? %>
          You don't have any sponsors
          <% else %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th class="col-md-3">Organization</th>
                  <th class="col-md-1">Contacts</th>
                  <th class="col-md-1">State</th>
                  <th class="col-md-2">Next Step</th>
                  <th class="col-md-2"></th>
                  <th class="col-md-3"></th>
                </tr>
              </thead>
              <tbody>
                <%= render @sponsors %>
              </tbody>
            </table>
          </div>
          <div class="text-center">
            <%= will_paginate @sponsors, renderer: BootstrapPagination::Rails %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
