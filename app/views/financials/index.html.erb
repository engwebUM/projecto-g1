<%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
<div class="container">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="page-header">
        <h3>Financials</h3>
      </div>
      <% if @plans.empty? %>
      <div>
        No plans available.
      </div>
      <% else %>

        <%= pie_chart @graphic.return_profit %>
        <p class="chart-label">Profit by plan chart<p>

        <%= column_chart @graphic.return_of_investiment %>
        <p class="chart-label">Return of investiment chart<p>

        <%= column_chart @graphic.return_extra_pay_total %>
        <p class="chart-label">Extra pay by plan chart<p>

      <% end %>
    </div>
  </div>
</div>
